<% layout("/layouts/boilerplate.ejs")%>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="input-control" type="text" id="title" name="campground[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="input-control" type="text" id="location" name="campground[location]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL:</label>
                <input class="input-control" type="text" id="image" name="campground[image]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class=" input-group">
                <span class="input-group" id="price-label">$</span>
                <input id="price" aria-label="price" class="from-control" type="text" placeholder="0"
                       aria-describedby="price-label" name="campground[price]">
            </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="input-control" type="text" id="description" name="campground[description]"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">All campgrounds</a>

    </div>
</div>

